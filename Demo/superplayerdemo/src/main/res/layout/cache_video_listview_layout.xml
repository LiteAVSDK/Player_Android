<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/cache_rv_video_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:reverseLayout="false"
        android:orientation="vertical"/>

    <LinearLayout
        android:id="@+id/cache_ll_empty_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/cache_iv_list_empty_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/superplayer_cache_list_empty"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/cache_tv_list_empty_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/cache_empty_text_colo"
            android:textSize="12sp"
            android:text="@string/superplayer_cahche_empty"
            android:layout_marginTop="8dp"/>

    </LinearLayout>

</RelativeLayout>
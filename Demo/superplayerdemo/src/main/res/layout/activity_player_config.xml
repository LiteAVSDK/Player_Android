<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/feed_page_bg"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/super_player_vod_config"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:maxLines="2"
                android:textColor="@color/vod_setting_button"
                android:layout_marginBottom="7dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <CheckBox
                        android:id="@+id/checkbox_accurate_seek"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textSize="14sp"
                        android:checked="true"
                        android:maxLines="2"
                        android:textColor="@color/superplayer_white"
                        android:text="@string/super_player_vod_need_accurate_seek"/>
                    <CheckBox
                        android:id="@+id/checkbox_smooth_change"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="14sp"
                        android:checked="true"
                        android:maxLines="2"
                        android:textColor="@color/superplayer_white"
                        android:text="@string/super_player_vod_smooth_switch"/>
                    <CheckBox
                        android:id="@+id/checkbox_auto_rotate"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="14sp"
                        android:checked="true"
                        android:maxLines="2"
                        android:textColor="@color/superplayer_white"
                        android:text="@string/super_player_vod_rotate_auto"/>
                    <CheckBox
                        android:id="@+id/checkbox_bitrate_index"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="14sp"
                        android:checked="true"
                        android:maxLines="2"
                        android:textColor="@color/superplayer_white"
                        android:text="@string/super_player_vod_adaptive_bitrate"/>
                    <CheckBox
                        android:id="@+id/checkbox_deal"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:textSize="14sp"
                        android:checked="true"
                        android:maxLines="2"
                        android:textColor="@color/superplayer_white"
                        android:text="@string/super_player_vod_super_resolution"/>
                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_play_reconnect_time"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            android:textColor="@color/superplayer_white"
                            android:text="@string/super_player_vod_reconnect_count"
                            android:textSize="14sp" />
                        <EditText
                            android:id="@+id/et_play_reconnect_time"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_play_reconnect_time"
                            android:textSize="10sp"
                            android:digits="1234567890"
                            android:textColor="@color/superplayer_white"
                            android:inputType="phone|number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_play_reconnect_interval"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/superplayer_white"
                            android:text="@string/super_player_vod_reconnect_period" />
                        <EditText
                            android:id="@+id/et_play_reconnect_interval"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_play_reconnect_interval"
                            android:textSize="10sp"
                            android:textColor="@color/superplayer_white"
                            android:digits="1234567890"
                            android:inputType="phone|number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_connect_over_time"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:textColor="@color/superplayer_white"
                            android:gravity="center_vertical"
                            android:text="@string/super_player_vod_connect_timeout" />
                        <EditText
                            android:id="@+id/et_connect_over_time"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_connect_over_time"
                            android:textSize="10sp"
                            android:textColor="@color/superplayer_white"
                            android:digits="1234567890"
                            android:inputType="phone|number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_progress_interval"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:textColor="@color/superplayer_white"
                            android:gravity="center_vertical"
                            android:text="@string/super_player_vod_progress_period" />

                        <EditText
                            android:id="@+id/et_progress_interval"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:textColor="@color/superplayer_white"
                            android:layout_toRightOf="@+id/tv_progress_interval"
                            android:digits="1234567890"
                            android:inputType="phone|number"
                            android:textSize="10sp" />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_cache_folder"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:textColor="@color/superplayer_white"
                            android:gravity="center_vertical"
                            android:text="@string/super_player_vod_cache_directory"/>
                        <EditText
                            android:id="@+id/et_cache_folder"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_cache_folder"
                            android:textSize="10sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/superplayer_white"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_max_cache"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:gravity="center_vertical"
                            android:textColor="@color/superplayer_white"
                            android:text="@string/super_player_vod_max_cache"/>
                        <EditText
                            android:id="@+id/et_max_cache"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_max_cache"
                            android:textSize="10sp"
                            android:gravity="center_vertical"
                            android:digits="1234567890"
                            android:textColor="@color/superplayer_white"
                            android:inputType="phone|number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/tv_preload_max_cache"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:textColor="@color/superplayer_white"
                            android:gravity="center_vertical"
                            android:text="@string/super_player_vod_pre_max_cache" />
                        <EditText
                            android:id="@+id/et_preload_max_cache"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_preload_max_cache"
                            android:textSize="10sp"
                            android:textColor="@color/superplayer_white"
                            android:digits="1234567890"
                            android:inputType="phone|number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/tv_buffering_max_time"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:textColor="@color/superplayer_white"
                            android:gravity="center_vertical"
                            android:text="@string/super_player_vod_buffer_max_cache" />
                        <EditText
                            android:id="@+id/et_buffering_max_time"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_buffering_max_time"
                            android:textSize="10sp"
                            android:textColor="@color/superplayer_white"
                            android:digits="1234567890"
                            android:inputType="phone|number"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:id="@+id/tv_preferred_resolution"
                            android:layout_width="140dp"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="14sp"
                            android:textColor="@color/superplayer_white"
                            android:gravity="center_vertical"
                            android:text="@string/super_player_vod_prefer_resolution"/>
                        <EditText
                            android:id="@+id/et_preferred_resolution"
                            android:layout_width="80dp"
                            android:layout_height="35dp"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/tv_preferred_resolution"
                            android:textSize="10sp"
                            android:textColor="@color/superplayer_white"
                            android:gravity="center_vertical"
                            android:digits="1234567890"
                            android:inputType="phone|number"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <TextView
                    android:textColor="@color/superplayer_white"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/super_player_vod_media_type"/>

                <Spinner
                    android:id="@+id/sp_player_media_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/player_media_type"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <TextView
                    android:layout_width="100dp"
                    android:textColor="@color/superplayer_white"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/super_player_vod_decode_strategy"/>

                <Spinner
                    android:id="@+id/sp_decoding_strategy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/decoding_strategy"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <TextView
                    android:layout_width="100dp"
                    android:textColor="@color/superplayer_white"
                    android:layout_height="wrap_content"
                    android:text="@string/super_player_vod_log_level"/>

                <Spinner
                    android:id="@+id/sp_log_level"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/log_level"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <TextView
                    android:layout_width="100dp"
                    android:textColor="@color/superplayer_white"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/super_player_vod_video_type"/>

                <Spinner
                    android:id="@+id/sp_video_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:entries="@array/video_type"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_gravity="center"
        android:gravity="center">
        <Button
            android:id="@+id/btn_save_config"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/vod_setting_button"
            android:textColor="@color/superplayer_white"
            android:text="@string/super_player_vod_save"/>
        <Button
            android:id="@+id/btn_reset_config"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/vod_setting_button"
            android:textColor="@color/superplayer_white"
            android:text="@string/super_player_vod_reset"/>
    </LinearLayout>
</LinearLayout>
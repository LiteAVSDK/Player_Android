<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:id="@+id/superplayer_tv_appid_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="AppID"
        android:textColor="@color/superplayer_white"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/superplayer_et_appid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@drawable/superplayer_ic_vod_search"
        android:textColor="@color/superplayer_white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/superplayer_tv_fileid_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="FileID"
        android:textColor="@color/superplayer_white"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/superplayer_et_fileid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/superplayer_ic_vod_search"
        android:textColor="@color/superplayer_white"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/superplayer_tv_psign_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:text="PSign(optional)"
        android:textColor="@color/superplayer_white"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/superplayer_et_psign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/superplayer_ic_vod_search"
        android:textColor="@color/superplayer_white"
        android:textSize="14dp" />

    <CheckBox
        android:id="@+id/superplayer_cb_cache_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:checked="false"
        android:text="是否开启缓存功能"/>


</LinearLayout>
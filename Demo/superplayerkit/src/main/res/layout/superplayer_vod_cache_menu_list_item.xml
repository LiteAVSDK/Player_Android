<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/superplayer_transparent"
    tools:background="@color/superplayer_black">

    <TextView
        android:id="@+id/superplayer_tv_video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/superplayer_white"
        android:textSize="14sp"
        android:ems="8"
        android:maxEms="8"
        android:ellipsize="end"
        android:lines="1"/>

    <ImageView
        android:id="@+id/superplayer_iv_is_cache"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/superplayer_tv_video_name"
        android:visibility="invisible"
        android:src="@drawable/superplayer_ic_vod_check"/>

</RelativeLayout>
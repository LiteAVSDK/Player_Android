<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/superplayer_common_dialog_round_bg">

    <TextView
        android:id="@+id/dialog_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/superplayer_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textSize="16sp"
        android:minEms="2"
        tools:text="提示"/>

    <TextView
        android:id="@+id/dialog_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_centerHorizontal="true"
        android:gravity="start"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/superplayer_color_gray"
        android:minEms="2"
        tools:text="欢迎使用本应用"/>

    <View
        android:id="@+id/dialog_v_content_divide_line"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_tv_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/superplayer_color_gray"/>

    <View
        android:id="@+id/dialog_v_btn_divide_line"
        android:layout_width="0.5dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_v_content_divide_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/superplayer_color_gray"/>

    <Button
        android:id="@+id/dialog_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:background="@color/superplayer_transparent"
        app:layout_constraintTop_toBottomOf="@id/dialog_v_content_divide_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dialog_v_btn_divide_line"
        android:textColor="@color/superplayer_color_gray"
        android:text="@string/superplayer_cancel"
        />

    <Button
        android:id="@+id/dialog_btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="50dp"
        android:paddingEnd="50dp"
        android:background="@color/superplayer_transparent"
        app:layout_constraintTop_toBottomOf="@id/dialog_v_content_divide_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_v_btn_divide_line"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/superplayer_cache_btn_color"
        android:text="@string/superplayer_ok"
        />

</androidx.constraintlayout.widget.ConstraintLayout>